source /etc/backup-cron/backup-cron.conf

if [ "${REMOTE_IP}" != "" ]; then

  for ip in ${REMOTE_IP}; do
    rsync -av ${BACKUP_PATH} -e "ssh -l admin" admin@${ip}:/${BACKUP_PATH}
  done

fi

