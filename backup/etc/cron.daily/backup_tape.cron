source /etc/backup-cron/backup-cron.conf
source /usr/libexec/backup-cron/backup-cron_functions.sh



# Función para controlar la unidad de cintas. Para mas detalles vea man (1) mt.
tape_control() {
  local OP="$1"
  local MT="/usr/sbin/mt"
  
  $MT -f $TAPE $OP &>/dev/null
  
  case ${?} in
    0 )
      message_syslog "$BTAPE_NAME" "La operación \"$OP\" tuvo éxito."
      exit
      ;;
    1 )
      message_syslog "$BTAPE_NAME" "Operación \"$OP\" o dispositivo \"$TAPE\" inválidos."
      exit
      ;;
    2 )
      message_syslog "$BTAPE_NAME" "La operación \"$OP\" falló."
      exit
      ;;
  esac

}



# Función para realizar copias de respaldo en cinta.
tapebackup () {
  tape_control "erase"
  tape_control "rewind"
  dir_backup "$BTAPE_NAME" "$TAPE" "$DIRSTOBACK" "tape"
  tape_control "rewoffl"
}



if [ -c $TAPE ]; then
  tapebackup
fi

